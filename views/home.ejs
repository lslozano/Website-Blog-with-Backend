
<%- include("partials/header"); -%>
    <h1>Home</h1>
    <p> <%= startingContent %> </p>

  <% if (postsList.length == 0) { %>
    <h2> No posts yet.</h2>
  <% } else { %>
    <%  postsList.forEach(post => { %>
      <h1><%= post.title %></h1>
      <p>
      <%= post.content.substring(0, 100) + " ..."%>
      <a href="/posts/<%= post.title %>">Read More</a>
      </p>
    <% }) %>
  <% } %>
<%- include("partials/footer"); -%>
